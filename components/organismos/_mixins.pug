mixin anuncios(img, title, description)
  .anuncio
    img(src= img, alt= title)
    p.bold= title 
    p= description

mixin cursoCard(img, title, description)
  a(href= "curso.html").card-curso 
    img(src= img, alt= title)
    .curso-description 
      h3= title 
      p= description 

mixin datos(num, description)
  .data
    h1.huge-letter.bold.main-color= num 
    p= description

mixin section(title, img, url)
  a(href= url).container.container-section
    h3= title 
    img(src= img, alt= title)

mixin headerCurso(title)
  .header-curso 
    h2= title 
    span.material-icons
      |search

mixin comment(img, user, text)
  .comment 
    img(src= img, alt= user)
    h3= user 
    p= text