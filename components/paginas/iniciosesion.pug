extends ../organismos/_head.pug 
include ../organismos/_mixins.pug
block title
  |Cer/iniciar sesion
block content
  .main-container
    .container
      .sprite-container: img(src="Logo/logos-01.png", alt="Logo cer enelar")
      h2.light Centro de entrenamiento rápido
      p
        | Entrenamiento para lograr el éxito en 
        br
        a(href="https://enelar.com.co/") Enelar E.S.P
    .container-row
      +section('Mantenimiento', 'iconos/gear.svg', 'mantenimiento.html')
      +section('Operación', 'iconos/monitor.svg', 'operacion.html')

    .container 
      h1 Iniciar sesión
      form.form-container(action="", method="post" name="inicioSesion")
        input.text-input(type="text" placeholder="Usuario")
        input.text-input(type="password" placeholder="Contraseña")
        a.button.main-button.bold(href="seleccion.html") ¡Entrar!
        .container-between
          a(href="/") Cambiar contraseña
          a(href="crearUsuario.html") Crear usuario